<h2>Update the drone</h2>

<form action="/drones/{{_id}}/edit" method="POST">

  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="{{name}}" />

  <label for="propellers">Propellers:</label>
  <input type="number" name="propellers" id="rate-input" min="1" max="10" value = "{{propellers}}"/>

  <label for="maxSpeed">Max Speed:</label>
  <input type="text" name="maxSpeed" id="maxSpeed" value= "{{maxSpeed}}"/>

  <button type="submit">Submit</button>

</form>